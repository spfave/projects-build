{
	"name": "@projectsbuild/api-hono",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"exports": {
		"./app": "./src/app.ts",
		"./client": "./src/client.ts",
		"./routes/*": "./src/routes/*"
	},
	"imports": {
		"#lib/*": "./src/lib/*",
		"#routes/*": "./src/routes/*"
	},
	"scripts": {
		"start": "pnpm run run:local",
		"run:local": "node --inspect=9252 --watch --env-file=../../.env.local src/index.ts",
		"check": "biome check ./src",
		"format": "biome format ./src",
		"lint": "biome lint ./src",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.6",
		"@projectsbuild/core": "workspace:*",
		"@projectsbuild/db-drizzle": "workspace:*",
		"@projectsbuild/library": "workspace:*",
		"hono": "^4.10.4",
		"hono-rate-limiter": "^0.4.2"
	},
	"devDependencies": {
		"@projectsbuild/config-typescript": "workspace:*",
		"@types/node": "catalog:",
		"typescript": "catalog:"
	}
}
